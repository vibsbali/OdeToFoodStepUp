@model HomePageViewModel

@{
    ViewBag.Title = "Home!";
}

<h1>Welcome!</h1>
   
<div>
    <ul>
        @foreach (var restuarant in Model.Restaurants)
        {
           @Html.Partial("_Summary", restuarant);
        }
    </ul>
</div> 

<div>
    <a asp-controller="Home" asp-action="Create">Create a new restaurant</a>
</div>

@section footer {
    <h3>@Model.CurrentGreeting</h3>
}
