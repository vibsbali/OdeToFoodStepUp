@model HomePageViewModel

@{
    ViewBag.Title = "Home!";
}

<h1>Welcome!</h1>
   
<div>
    <ul>
        @foreach (var restuarant in Model.Restaurants)
        {
            <li>
                @restuarant.Id @restuarant.Name
                <a asp-action="Details" asp-route-id="@restuarant.Id">Details</a>
                <a asp-action="Edit" asp-route-id="@restuarant.Id">Edit</a>
            </li>
        }
    </ul>
</div> 

<div>
    <a asp-controller="Home" asp-action="Create">Create a new restaurant</a>
</div>

@section footer {
    <h3>@Model.CurrentGreeting</h3>
}
